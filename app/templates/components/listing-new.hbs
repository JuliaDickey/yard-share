<h3>Add a new listing</h3>
<form >
  <div class="form-group">
    <label for="title">Title</label>
    {{input id=title class="form-control"}}
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    {{textarea id=description class="form-control"}}
  </div>
  <div class="form-group">
    <label for="rate">Daily rate</label>
    {{input id=rate class="form-control"}}
  </div>
  <div class="form-group">
    <label for="image">Image URL</label>
    {{input id=image class="form-control"}}
  </div>
  <div class="form-group">
    <label for="zipcode">Zipcode</label>
    {{input id=zipcode class="form-control"}}
  </div>
  <div class="form-group">
    <label for="streetAddress">Street Address</label>
    {{textarea id=streetAddress class="form-control"}}
  </div>
  <div class="form-group">
    <label for="city">City</label>
    {{input id=city class="form-control"}}
  </div>
  <div class="form-group">
    <label for="state">State</label>
    {{input id=state class="form-control"}}
  </div>
  <!-- MAKE THIS A DROPDOWN -->
  <div class="form-group">
    <label for="neighborhood">Neighborhood</label>
    {{input id=neighborhood class="form-control"}}
  </div>
  <div class="form-group">
    <label for="guidelines">Guidelines</label>
    {{textarea id=guidelines class="form-control"}}
  </div>
  <div class="form-group">
    <h4>Available Amenities (check all that apply):</h4>
    <input type="checkbox" id=water {{action 'addAmmenity' on='change'}}>
    <label for="water">Water</label><br>
    <input type="checkbox" id=pets {{action 'addAmmenity' on='change'}}>
    <label for="pets">Pets ok</label><br>
    <input type="checkbox" id=bathroom {{action 'addAmmenity' on='change'}}>
    <label for="bathroom">Bathroom</label><br>
    <input type="checkbox" id=parking {{action 'addAmmenity' on='change'}}>
    <label for="parking">Parking</label><br>
    <input type="checkbox" id=alcohol {{action 'addAmmenity' on='change'}}>
    <label for="alcohol">Alcohol is ok</label><br>
    <input type="checkbox" id=smoking {{action 'addAmmenity' on='change'}}>
    <label for="smoking">Smoking</label><br>
    <input type="checkbox" id=wifi {{action 'addAmmenity' on='change'}}>
    <label for="wifi">Wifi</label><br>
    <input type="checkbox" id=fires {{action 'addAmmenity' on='change'}}>
    <label for="fires">Fires</label><br>
    <input type="checkbox" id=rvHookup {{action 'addAmmenity' on='change'}}>
    <label for="rvHookup">RV hookup</label><br>
    <input type="checkbox" id=electricity {{action 'addAmmenity' on='change'}}>
    <label for="electricity">Electricity</label><br>
    <input type="checkbox" id=grill {{action 'addAmmenity' on='change'}}>
    <label for="grill">Grill</label>
  </div>
  <div class="form-group">
    <label for="state">State</label>
    {{input id=state value="state" class="form-control"}}
  </div>
  <button class="btn" {{action 'saveListing'}}>Save</button>
</form>

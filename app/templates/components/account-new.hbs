<h2>Create your account</h2>
<form>
  <div class="form-group">
    <label for="username">Username</label>
    {{input value=username id="username"}}
    <label for="password">Password</label>
    {{input value=password id="password"}}
    <div class="form-group">
      <p>Account Type:</p>
      <label for="userType">Renter</label>
      {{radio-button value='renter' checked=userType}}
      <label for="userType">Owner</label>
      {{radio-button value='owner' checked=userType}}
    </div>
  </div>
  <button class="btn btn-default"{{action 'createAccount'}}>Sign Up</button>
</form>

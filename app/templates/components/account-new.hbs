<h2>Create your account</h2>
<form>
  <div class="form-group">
    <label for="username">Username</label>
    {{input value=username id="username"}}
    <label for="password">Password</label>
    {{input value=password id="password"}}
    <div class="form-group">
      {{radio-button value='renter' checked=userType}}
      <label for="userType">Renter Account</label><span class="pipes">|</span>
      {{radio-button value='owner' checked=userType}}
      <label for="userType">Owner Account</label>
    </div>
  </div>
  <button class="btn btn-success"{{action 'createAccount'}}>Sign Up</button>
</form>

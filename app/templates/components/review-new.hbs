{{#if addNewReview}}
<div class="new-review">
   <h2>New Review</h2>
   <form>
     <div class="form-group">
       <label for="username">Your Username</label>
       {{input value=username id="username" class="form-control"}}
     </div>
     <div class="form-group">
        <label for="rating">Rating</label>
        {{#power-select
          selected=rating
          options=ratings
          onchange=(action (mut rating))
          as |item|
        }}
        {{item}}
        {{/power-select}}
      </div>
     <div class="form-group">
       <label for="text">Comments</label>
       {{textarea value=text id="text" class="form-control"}}
     </div>
     <button class="btn btn-default" {{action 'saveReview'}}>Add Review</button>
     <button class="btn btn-default"{{action 'dontAddNewReview'}}>Cancel</button>
   </form>
</div>
{{else}}
  <button class="btn btn-default"{{action 'addNewReview'}}>Write a Review about {{renter.username}}</button>
  <hr>
{{/if}}

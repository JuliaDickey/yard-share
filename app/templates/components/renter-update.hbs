{{#if updateRenterForm}}
<h2>Update your Profile:</h2>
<form>
  <div class="form-group">
    <label for="description">Description</label>
    {{input value=description id="description"}}
    <label for="image">Image URL</label>
    {{input value=image id="image"}}
  </div>
  <button class="btn btn-default"{{action 'updateRenter' }}>Save</button>
  <button class="btn btn-default"{{action 'updateRenterFormHide' renter}}>Cancel</button>
</form>
{{else}}
  <button class="btn btn-default"{{action 'updateRenterFormShow'}}>Update your Profile</button>
{{/if}}
